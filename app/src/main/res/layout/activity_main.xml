<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vvit.ammu.autovolume.MainActivity">


    <SeekBar
        android:id="@+id/id_volume_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="25dp"
        />


    <TextView
        android:id="@+id/id_speed_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:text="Speed is: "
        android:textSize="18sp"
        android:layout_below="@+id/id_volume_bar"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_volume_mute"
        android:layout_alignBottom="@+id/id_speed_view"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="92dp" />

    <Switch
        android:id="@+id/id_switch_enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Auto Volume "
        android:layout_marginBottom="45dp"
        android:layout_marginStart="26dp"
        android:theme="@style/MySwitch"
        android:layout_above="@+id/id_speed_view"
        android:layout_alignEnd="@+id/id_volume_bar"
        android:layout_marginEnd="11dp" />
</RelativeLayout>
